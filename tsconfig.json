{
  "compilerOptions": {
    "module": "NodeNext",
    "types": [],
    "lib": ["ESNext"],
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "importHelpers": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
